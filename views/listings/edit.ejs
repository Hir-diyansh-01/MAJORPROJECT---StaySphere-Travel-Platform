<% layout("/layouts/boilerplate") %>

<div class="row justify-content-center mt-4">
  <div class="col-lg-8 col-md-10">
    <div class="form-container shadow-sm p-4 rounded bg-white">
      <h3 class="mb-4 text-center fw-bold">Edit Your Listing</h3>

      <form 
        method="POST"
        action="/listings/<%= listing._id %>?_method=PUT"
        enctype="multipart/form-data"
        class="needs-validation"
        novalidate
      >
        <!-- Title -->
        <div class="mb-3">
          <label for="title" class="form-label fw-semibold">Title</label>
          <input 
            type="text"
            class="form-control"
            id="title"
            name="listing[title]"
            value="<%= listing.title %>"
            required
          >
          <div class="valid-feedback">Looks good!</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label for="description" class="form-label fw-semibold">Description</label>
          <textarea 
            class="form-control"
            id="description"
            name="listing[description]"
            rows="4"
            required
          ><%= listing.description %></textarea>
          <div class="invalid-feedback">Please enter a description.</div>
        </div>

        <!-- Image Upload -->
        <div class="mb-3">
          <label for="image" class="form-label fw-semibold">Update Image</label>
          <input 
            type="file"
            class="form-control"
            id="image"
            name="listing[image]"
          >
          <small class="text-muted">Current Image:</small><br>
          <img 
            src="<%= listing.image.url %>"
            alt="Current Listing Image"
            class="img-fluid mt-2 rounded"
            style="max-height: 200px;"
          >
        </div>

        <!-- Price & Country -->
        <div class="row">
          <div class="col-md-4 mb-3">
            <label for="price" class="form-label fw-semibold">Price</label>
            <input 
              type="number"
              class="form-control"
              id="price"
              name="listing[price]"
              value="<%= listing.price %>"
              required
            >
            <div class="invalid-feedback">Enter a valid price.</div>
          </div>

          <div class="col-md-8 mb-3">
            <label for="country" class="form-label fw-semibold">Country</label>
            <input 
              type="text"
              class="form-control"
              id="country"
              name="listing[country]"
              value="<%= listing.country %>"
              required
            >
            <div class="invalid-feedback">Enter a valid country.</div>
          </div>
        </div>

        <!-- Location -->
        <div class="mb-3">
          <label for="location" class="form-label fw-semibold">Location</label>
          <input 
            type="text"
            class="form-control"
            id="location"
            name="listing[location]"
            value="<%= listing.location %>"
            required
          >
          <div class="invalid-feedback">Enter a valid location.</div>
        </div>

        <!-- Submit -->
        <div class="text-center">
          <button type="submit" class="btn add-btn px-4">Update Listing</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Category Dropdown (Pre-selected in Edit) -->
<div class="mb-3">
  <label for="category" class="form-label">Category</label>
  <select class="form-select" id="category" name="listing[category]" required>
    <option value="">Select a category</option>
    <option value="mountain" <%= listing.category === 'mountain' ? 'selected' : '' %>>Mountain</option>
    <option value="camping" <%= listing.category === 'camping' ? 'selected' : '' %>>Camping</option>
    <option value="heritage" <%= listing.category === 'heritage' ? 'selected' : '' %>>Heritage</option>
    <option value="city" <%= listing.category === 'city' ? 'selected' : '' %>>City</option>
    <option value="beach" <%= listing.category === 'beach' ? 'selected' : '' %>>Beach</option>
    <option value="luxe" <%= listing.category === 'luxe' ? 'selected' : '' %>>Luxe</option>
    <option value="adventure" <%= listing.category === 'adventure' ? 'selected' : '' %>>Adventure</option>
    <option value="forest" <%= listing.category === 'forest' ? 'selected' : '' %>>Forest</option>
    <option value="tent" <%= listing.category === 'tent' ? 'selected' : '' %>>Tent</option>
    <option value="domes" <%= listing.category === 'domes' ? 'selected' : '' %>>Domes</option>
    <option value="winter" <%= listing.category === 'winter' ? 'selected' : '' %>>Winter</option>
    <option value="desert" <%= listing.category === 'desert' ? 'selected' : '' %>>Desert</option>
    <option value="hotel" <%= listing.category === 'hotel' ? 'selected' : '' %>>Hotel</option>
    <option value="villa" <%= listing.category === 'villa' ? 'selected' : '' %>>Villa</option>
  </select>
</div>
